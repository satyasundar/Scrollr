{
  "manifest_version": 3,
  "name": "Scroll Progress",
  "version": "1.0",
  "description": "Shows how much of a webpage has been scrolled",
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
